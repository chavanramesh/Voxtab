    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="398dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/green_bar_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/lin_padding"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_add_audio"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight=".50"
            android:background="@drawable/add_btn_bg"
            android:padding="@dimen/btn_padding"
            android:text="@string/add_audio"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


        <Button
            android:id="@+id/btn_proceed_order"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight=".50"
            android:background="@drawable/proceed_btn_bg"
            android:padding="@dimen/btn_padding"
            android:text="@string/btn_proceed_order"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>