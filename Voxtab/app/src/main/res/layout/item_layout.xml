<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/lin_file_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btn_padding"
        android:background="@drawable/rivsed_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="2dp">


                <TextView
                    android:id="@+id/lbl_total_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:singleLine="true"
                    android:text="@string/total_fee"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size" />

                <TextView
                    android:id="@+id/lbl_delivery_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:singleLine="true"
                    android:text="@string/delivery_date_time"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:singleLine="true"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:singleLine="true"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">


                <TextView
                    android:id="@+id/txt_total_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:singleLine="true"
                    android:text="$50"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size" />

                <TextView
                    android:id="@+id/txt_delivery_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:singleLine="true"
                    android:text="11:30am 12Dec 2015"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_order_status"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="@dimen/btn_padding"
                android:layout_weight="0.10"
                android:src="@drawable/flag_icon" />


            <TextView
                android:id="@+id/txt_order_status_title"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/btn_padding"
                android:layout_weight="0.90"
                android:background="@drawable/selected_file_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/order_placed"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_order_status_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/order_placed"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />


            <TextView
                android:id="@+id/txt_order_placed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="11:30am 12Dec 2015"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />


            <TextView
                android:id="@+id/lbl_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/view_order_details"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_upload_status"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="@dimen/btn_padding"
                android:layout_weight="0.10"
                android:src="@drawable/audio_uploaded_icon" />


            <TextView
                android:id="@+id/txt_audio_uploaded_status_title"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/btn_padding"
                android:layout_weight="0.90"
                android:background="@drawable/selected_file_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/audio_uploaded"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />


            <!--   <TextView
                   android:id="@+id/txt_upload_status_title"
                   android:layout_width="0dp"
                   android:layout_height="38dp"
                   android:layout_gravity="center"

                   android:layout_weight="0.80"
                   android:background="@drawable/selected_file_bg"
                   android:gravity="center"
                   android:singleLine="true"
                   android:text="11:30am 12Dec 2015"
                   android:textColor="@android:color/black"
                   android:textSize="@dimen/btn_txt_size" />
   -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_audio_uploaded_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="11:30am 12Dec 2015"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_delivered_status"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_margin="@dimen/btn_padding"
                android:layout_weight="0.10"
                android:src="@drawable/delivered_completed" />


            <TextView
                android:id="@+id/txt_delivered_status_title"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/btn_padding"
                android:layout_weight="0.90"
                android:background="@drawable/selected_file_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/delivered"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/btn_padding"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_delivered_status_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:singleLine="true"
                android:text="@string/order_delivered"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />


            <TextView
                android:id="@+id/txt_order_delivered_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:singleLine="true"
                android:text="11:30am 12Dec 2015"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size" />


            <TextView
                android:id="@+id/lbl_download_transcription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="@string/download_transcription"
                android:textColor="@android:color/black"
                android:textSize="@dimen/btn_txt_size"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>