<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/btn_padding">

    <LinearLayout
        android:id="@+id/lin_file_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_unread"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_noti_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_padding"
            android:padding="@dimen/lin_padding"
            android:singleLine="true"
            android:text="akflrefvaerferfvefvvedrfv"
            android:textColor="@color/darkGrayText"
            android:textSize="@dimen/secondary_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="@dimen/lin_padding">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/btn_padding">


                <TextView
                    android:id="@+id/scheme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/btn_padding"
                    android:singleLine="true"
                    android:text="@string/click_here"
                    android:textColor="@color/color_not_txt"
                    android:textSize="@dimen/txtminsize"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/darkGrayText"
                    android:textSize="@dimen/tertiary_text_size" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>