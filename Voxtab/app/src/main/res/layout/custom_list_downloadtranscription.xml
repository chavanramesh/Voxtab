<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_padding"
        android:longClickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/btn_padding"
        android:id="@+id/headerLayout">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center|start">

            <TextView
                android:id="@+id/lbl_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding"
                android:singleLine="true"
                android:text="@string/file_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txtmemid_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="left|center">

            <TextView
                android:id="@+id/lbl_delivery_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding"
                android:singleLine="true"
                android:text="@string/delivery_date_time"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txtmemid_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center|start">

            <TextView
                android:id="@+id/lbl_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding"
                android:singleLine="true"
                android:text="@string/duration"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txtmemid_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center|right">

            <TextView
                android:id="@+id/lbl_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding"
                android:singleLine="true"
                android:text="@string/share"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txtmemid_size" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_padding"
        android:background="@color/colorPrimary"
        android:longClickable="true"
        android:orientation="horizontal"
        android:padding="@dimen/btn_padding">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <TextView
                android:id="@+id/txt_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding"
                android:singleLine="false"
                android:text="file_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_name"
                android:textColor="@color/whiteText"
                android:textSize="@dimen/txtmemid_size"
                android:maxLines="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25" >

            <TextView
                android:id="@+id/txt_delivery_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding"
                android:singleLine="false"
                android:text="file_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_name"
                android:textColor="@color/whiteBackground"
                android:textSize="@dimen/txtmemid_size"
                android:maxLines="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25" >

            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding"
                android:singleLine="false"
                android:text="file_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_namefile_name"
                android:textColor="@color/whiteText"
                android:textSize="@dimen/txtmemid_size"
                android:maxLines="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/layimg_share"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/btn_padding"
                android:layout_marginRight="@dimen/btn_padding"
                android:padding="2dp"
                android:src="@drawable/share_icon" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>