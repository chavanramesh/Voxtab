<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/rivsed_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".90"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="@dimen/btn_padding">

                <TextView
                    android:id="@+id/txt_assignment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/assignment_no"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size" />
                <TextView
                    android:id="@+id/txt_orderDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/btn_txt_size"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:gravity="right|center"
                android:orientation="vertical"
                android:padding="@dimen/btn_padding">

                <ImageView
                    android:id="@+id/img_order_status"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/order_placed_icon" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/btn_padding">

            <TextView
                android:id="@+id/txt_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_padding"
                android:singleLine="true"
                android:text="@string/status"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txtmemid_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>