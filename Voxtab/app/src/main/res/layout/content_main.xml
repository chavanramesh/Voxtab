<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_main"
    android:paddingTop="58dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include-->
        <!--layout="@layout/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".50"
        android:background="@color/color_recording_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_start_recording"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/record_image_selector" />

        <Button
            android:id="@+id/btn_start_recording"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_selector_start"
            android:gravity="center"
            android:text="@string/start_recording"
            android:textAllCaps="false"
            android:textColor="@drawable/text_selector_start"
            android:textSize="@dimen/btn_txt_size" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".50"
        android:background="@color/color_upload_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_add_audio"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/add_image_selector" />

        <Button
            android:id="@+id/btn_add_audio"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_selector_upload"
            android:gravity="center"
            android:text="@string/add_audio"
            android:textAllCaps="false"
            android:textColor="@drawable/text_selector_upload"
            android:textSize="@dimen/btn_txt_size" />


    </LinearLayout>
</LinearLayout>